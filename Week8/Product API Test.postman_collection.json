							"// 1. Kiểm tra Status Code là 201 Created",
							"pm.test(\"Status code là 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"// 2. Kiểm tra response body có phải là JSON hợp lệ",
							"pm.test(\"Response body là JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"// 3. Kiểm tra tên sản phẩm được trả về đúng như đã gửi",
							"pm.test(\"Tên sản phẩm được tạo chính xác\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.include(\"Sản phẩm Test\");",
							"});",
							"",
							"// 4. Lưu lại ID sản phẩm vừa tạo để dùng cho các request sau",
							"var jsonData = pm.response.json();",
							"if (jsonData.id) {",
							"    pm.environment.set(\"newProductId\", jsonData.id);",
							"    console.log(\"Đã lưu newProductId: \" + jsonData.id);",
							"}"
						],
